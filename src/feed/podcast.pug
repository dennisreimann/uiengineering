include _episode

- var episodes = mvb.articles
- var podcastsUrl = h.baseUrl(h.assetPath("podcast.html"), true)
- var lastUpdate = h.articles.lastUpdate(episodes)
- var title = "UI engineering Podcast"
- var names = "Jan Persiel und Dennis Reimann"
- var email = "mail@uiengineering.de"
- var description = "Jan Persiel und Dennis Reimann setzen sich daf√ºr ein, durch die enge Zusammenarbeit von Design und Entwicklung schneller bessere und nachhaltigere Ergebnisse zu erzielen. Im UI engineering Podcast geht es um Best Practices, Workflows und Tools die zu einem besseren Miteinander von Design und Entwicklung beitragen."

doctype xml
rss(xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:creativeCommons="http://backend.userland.com/creativeCommonsRssModule" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/" version="2.0")
  channel
    atom:link(href=h.baseUrl(h.assetPath("podcast.xml")) type="application/rss+xml" rel="self")
    sy:updatePeriod weekly
    sy:updateFrequency 1
    ttl 720
    title= title
    link= podcastsUrl
    generator UI engineering Podcast Feed Generator v1.0.0
    docs http://blogs.law.harvard.edu/tech/rss
    language de-DE
    copyright= names
    lastBuildDate= h.dateFormat.rfc822(lastUpdate)
    pubDate= h.dateFormat.rfc822(lastUpdate)
    description= description
    managingEditor #{email} (#{names})
    webMaster #{email} (#{names})
    image
      title= title
      url= h.baseUrl(h.podcastImage("cover", 144), true)
      link= podcastsUrl
      width 144
      height 144
    itunes:author= names
    itunes:summary= description
    itunes:keywords UI engineering,Design,Development,Frontend,RWD,PatternLab,Pattern Library,Styleguide,Styletiles,Responsive,JavaScript,Elm,CSS,HTML,HTML5,Mobile
    itunes:explicit clean
    itunes:category(text="Technology")
    itunes:owner
      itunes:name= names
      itunes:email= email
    itunes:image(href=h.baseUrl(h.podcastImage("cover", 3000), true))
    for e in episodes
      +episode(e, h)
