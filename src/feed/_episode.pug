mixin episode(a)
  - var thumbnailSize = 320
  - var thumbnailUrl = a.imageDir ? h.enforceScheme("http", h.podcastImageUrl(a.imageDir, thumbnailSize)) : null
  - var imageUrl = a.imageDir ? h.enforceScheme("http", h.podcastImageUrl(a.imageDir, 3000)) : null
  - var mp3Url = a.mp3 ? h.enforceScheme("http", h.assetUrl("mp3s/" + a.mp3)) : null
  if mp3Url
    item
      guid(isPermaLink="false")= a.shortId
      title [#{a.shortId}] #{a.title}
      pubDate= h.dateFormat.rfc822(a.date)
      enclosure(url=mp3Url length=a.mp3Bytes type="audio/mpeg")
      description <![CDATA[!{a.content}]]>
      if thumbnailUrl
        media:thumbnail(url=thumbnailUrl width=thumbnailSize height=thumbnailSize)
      if a.content
        itunes:summary <![CDATA[!{a.content}]]>
      if imageUrl
        itunes:image(href=imageUrl)
      if a.duration
        itunes:duration= a.duration
      if a.subtitle
        itunes:subtitle= a.subtitle
      if a.tags
        itunes:keywords= h.article.keywords(a)
