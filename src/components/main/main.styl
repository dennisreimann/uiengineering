.main
  background-color $color-white
  overflow-x hidden

  html:not(.uiengine-preview) &
    @extend $background-rulers
    padding-top $space-mega
    padding-bottom $space-mega

  .safari &
    padding-top $space-huge
  .safari.uiengine-preview &
    padding-top $space-normal

  *
    +
      h2
      h3
      .container
        margin-top $space-large
      ul
        margin-top $space-normal
      p
      li
        margin-top $space-normal

  h2
    +
      h3
        margin-top 0

  h3
    +
      p
      ul
        margin-top $space-normal

  ul
    margin-left 16px

  a
    color $color-brand-main
    text-decoration underline
    &:hover
    &:active
      text-decoration none

  i
  em
    font-family $font-family-lightitalic

  b
  strong
    font-family $font-family-bold

