.remark,
blockquote
  margin-bottom $space-l
  line-height 1.6
  @media up_to_L
    font-size $font-size-l
    hyphens manual
  @media L_and_up
    font-size $font-size-xl

.remark
  color $color-brand-main
  @media M_and_up
    text-align center
    span
      display block
      max-width 38em
      margin 0 auto

blockquote
  @extend $font-lightitalic
  p
    &:before
    &:after
      font-size 1em
    &:before
      content "„"
      margin-left -.9ch
      margin-right .2ch
    &:after
      content "“"
      margin-left .2ch
