h2
h3
h4
  letter-spacing -.02em
  line-height 1.4

  a
    text-decoration none !important

  span
    white-space nowrap

h2
  @extend $font-bold
  font-size $font-size-huge
  text-align center
  margin-bottom $space-normal

h3
  @extend $font-lightitalic
  font-size $font-size-large
  text-align center

h4
  font-size $font-size-subhead
