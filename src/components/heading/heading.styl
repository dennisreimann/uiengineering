h1
h2
h3
h4
h5
h6
  letter-spacing -.02em
  line-height 1.4
  a
    text-decoration none
  span
    white-space nowrap

h2
  font-size $font-size-huge
  text-align center
  margin-bottom $space-normal

  small
    font-style italic
    font-weight 300
    font-size $font-size-large

h3
  font-size $font-size-large
  font-style italic
  font-weight 300
  text-align center

h4
h5
h6
  font-size $font-size-subhead
