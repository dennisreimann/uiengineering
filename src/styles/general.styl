*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box
  vertical-align baseline

html
  line-height 1.5
  font-family 'Merriweather Sans', Helvetica Neue, Arial, Tahoma, Verdana, sans-serif
  font-size 16px
  height 100%

body
  color $color-text
  background #FFF
  height 100%
  font-size $font-size-normal
  overflow-x hidden 

h1
h2
h3
h4
h5
h6
  @extend $font-light
  line-height 1.3
  a
    text-decoration none
    color inherit

h1
  font-size $font-size-hero

h2
  font-size $font-size-large

h3
  font-size $font-size-head

h4
h5
h6
  font-size $font-size-subhead

ul
  margin-left 16px

a
  color $color-highlight
  text-decoration underline
  &:hover
  &:active
    text-decoration none

h1
h2
h3
h4
h5
h6
  +
    p
    ul
      margin-top $space-small


.deco
  +
    p
    ul
      margin-top $space-large

*
  +
    section
      margin-top $space-huge
    h2
    h3
    h4
    h5
    h6
    .container
      margin-top $space-large
    p
    ul
      margin-top $space-normal
    li
      margin-top $space-tiny
