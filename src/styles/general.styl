*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box
  vertical-align baseline

html
  line-height 1.5
  overflow-x hidden
  font-family $font-family-sans
  @media $mq-up_to_S
    font-size 13px
  @media $mq-S_to_M
    font-size 14px
  @media $mq-M_to_L
    font-size 15px
  @media $mq-L_and_up
    font-size 16px

body
  color $color-text
  background $color-white
  font-size $font-size-base

h1
h2
h3
h4
h5
h6
  letter-spacing -.02em
  line-height 1.4
  a
    text-decoration none
  span
    white-space nowrap

h2
  font-size $font-size-huge
  text-align center
  margin-bottom $space-normal

h3
  font-size $font-size-large
  font-style italic
  font-weight 300
  text-align center

h4
h5
h6
  font-size $font-size-subhead

ul
  margin-left 16px

a
  color $color-brand-main
  text-decoration underline
  &:hover
  &:active
    text-decoration none

i
em
  font-weight 300

b
strong
  font-weight 800
