.episodes
  margin-top $space-large

  &_group__title__count
    font-style italic
    font-weight 300
    font-size $font-size-large

  .episode
    &__image
      @media $mq-up_to_S
        display none
      @media $mq-S_and_up
        float left
        width 144px
        margin-right $space-large
    &__subtitle
      margin $space-tiny 0
      display block
      font-style italic
      font-weight 300
      font-size $font-size-base

.episode
  overflow hidden

  &__header
    margin-bottom $space-large
    text-align center

  &__heading
    margin-top 0

  &__title
    margin-bottom 0

  &__player
    display block
    width 320px
    margin 0 auto $space-large

  &__image
    width 100%

  &__audio
    width 100%
    margin-top -7px

  &__footer
    margin-top $space-large
