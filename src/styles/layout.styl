.wrap
  padding-left $space-large
  padding-right $space-large
  max-width 800px
  margin 0 auto

.header
  padding-top $space-normal
  padding-bottom $space-normal
  color $color-white
  width 100% 
  height 100%
  min-height 440px
  height 70vh
  background $color-brand-main url('../images/hero.png') center center no-repeat
  background-size cover
  display flex
  align-items center
  justify-content center

.logo
  @extend $font-extrabold
  text-align center

.main
  @extend $background-rulers
  padding-top $space-huge
  padding-bottom $space-mega

.intro
  @extend $font-base
  color $color-brand-main
  line-height 1.6
  @media $mq-up_to_M
    font-size $font-size-large
  @media $mq-M_and_up
    font-size $font-size-huge
    text-align center

.deco
  display table
  text-align center
  padding-top .6em
  span
    display block
    margin-top -.6em
    padding 0 $space-normal
    white-space nowrap
  &:before,
  &:after
    content ''
    display table-cell
    width 50%
    height 0
    border-top 1px dashed currentColor

.monster
  background $color-brand-main
  color $color-white
  padding-top $space-large
  padding-bottom $space-large
  text-align center
  margin-bottom $space-large
  margin-top $space-huge
  transform rotate(-1.5deg)
  width calc(100% + 80px)
  margin-left -40px
  span
    transform rotate(1.5deg)
    display block 

.footer
  @extend $background-rulers
  padding-top $space-huge
  padding-bottom $space-huge
  color $color-white
  background $color-brand-seco
  font-size $font-size-small

.person
  h4
    color $color-brand-main

// responsive
.container
  display flex
  flex-wrap wrap
  @media $mq-M_and_up
    margin-left $space-large * -1
    margin-right $space-large * -1
  .block
    flex 1 1 100%
    @media $mq-up_to_M
      + .block
        margin-top $space-large
    @media $mq-M_and_up
      flex-basis 50%
      padding-left $space-large
      padding-right $space-large
      + .block:nth-child(n+3)
        margin-top $space-large
