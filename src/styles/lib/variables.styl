$color-white = #FFF
$color-brand-main = #ff183e
$color-brand-seco = #331833
$color-blue = #253649
$color-darkblue = #152639
$color-text = $color-brand-seco
$color-dark-bg = darken($color-brand-seco, 5)

$font-size-ultra = 6rem
$font-size-mega = 4.5rem
$font-size-boss = 3rem
$font-size-huge = 2rem
$font-size-large = 1.5rem
$font-size-subhead = 1.125rem
$font-size-head = 1.25rem
$font-size-base = 1rem
$font-size-small = .9rem
$font-size-tiny = .75rem

$space-tiny = .25em
$space-small = .5em
$space-normal = .75em
$space-large = 1.5em
$space-huge = 2.5em
$space-mega = 4em

$font-family-sans = 'Merriweather Sans', 'Helvetica Neue', Arial, Tahoma, Verdana, sans-serif

$background-rulers
  position relative

  &:before
  &:after
    content ''
    position absolute
    top 0
    left 0
    right 0

    .safari &
      display none

  &:before
    height 4px
    background-image repeating-linear-gradient(90deg, transparent 0, transparent 4px, currentColor 4px, currentColor 5px)
    display block

  &:after
    height 8px
    background-image repeating-linear-gradient(90deg, transparent 0, transparent 49px, currentColor 49px, currentColor 50px)
    display block
