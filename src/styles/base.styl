*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box
  vertical-align baseline

html
  line-height 1.5
  overflow-x hidden
  font-family $font-family-base
  @media $mq-up_to_S
    font-size 13px
  @media $mq-S_to_M
    font-size 14px
  @media $mq-M_to_L
    font-size 15px
  @media $mq-L_and_up
    font-size 16px

body
  color $color-text
  font-size $font-size-base
